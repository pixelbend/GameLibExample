<?xml version="1.0" encoding="UTF-8"?>
<logic>
    <!--
   Button layout:
       fontSize: font size to write the text on each button
       columns: the buttons will be placed in a matrix formation. columns defines the maximum number of buttons per row
       width: button width. relative to stage width
       height: button height. relative to stage height
       ellipseDimension: round corner dimension. relative to the button height
       horizontalGap: the horizontal distance between buttons. relative to button width
       verticalGap: the vertical distance between buttons. relative to button height
       startX: the starting X for the button matrix arrangement. relative to stage width
       startY: the starting Y for the button matrix arrangement. relative to stage height
   -->
    <buttonLayout fontSize="20" columns="5" width="0.1666666" height="0.2" ellipseDimension="0.2" horizontalGap="0.1666666"
                  verticalGap="0.1" startX="0.0277777" startY="0.3"/>
    <!-- Test buttons. Each test button must point to a valid test screen name -->
    <buttons>
        <button textID="openTestPopup"                      commandName="_popupScreen__openPopup"     popupName="_game__firstPopup"/>
        <button textID="switchStackPopups"                  commandName="_popupScreen__switchStackPopups" />
        <button textID="switchTranslucentLayerEnabled"      commandName="_popupScreen__switchTranslucentLayerEnabled" />
        <button textID="changeTranslucentLayerColor"        commandName="_popupScreen__changeTranslucentLayerColor" />
        <button textID="changeTranslucentLayerAlpha"        commandName="_popupScreen__changeTranslucentLayerAlpha" />
    </buttons>

    <transparentLayerColors>
        <transparentLayerColor color="0x7A585E" />
        <transparentLayerColor color="0x4D1D69" />
        <transparentLayerColor color="0x111111" />
    </transparentLayerColors>

    <transparentLayerAlphas>
        <transparentLayerAlpha alpha="0.4" />
        <transparentLayerAlpha alpha="0.6" />
        <transparentLayerAlpha alpha="0.9" />
    </transparentLayerAlphas>
</logic>